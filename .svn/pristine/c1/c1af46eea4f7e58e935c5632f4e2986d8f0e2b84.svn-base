/* CSS Document */
body{  font-family:Arial, Helvetica, sans-serif; font-size:12px}
.login{width: 400px; min-height: 300px;  margin:100px auto;}
.heading {
	height: 38px;
	padding-left: 7px; 
	padding-right: 7px;
	border: 1px solid #DBDBDB;
	background: url(../images/box.png)  repeat-x;
	-webkit-border-radius: 7px 7px 0px 0px;
	-moz-border-radius: 7px 7px 0px 0px;
	-khtml-border-radius: 7px 7px 0px 0px;
	border-radius: 7px 7px 0px 0px;
}
.heading h1 {
	margin: 0px;
	padding: 11px 0px 0px 0px;
	color: #ffffff;
	font-size: 16px;
	float: left;
}
 .heading h1 img {
	float: left;
	margin-top: -1px;
	margin-left: 3px;
	margin-right: 8px;
}
 .contentlogin {
	padding: 10px;
	border-left: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	border-bottom: 1px solid #CCCCCC;
	min-height: 200px;
	overflow: auto;
}
.tb_login tr td { padding:7px 0px }
.linkforgot{ color:#0042B2}
.linkforgot a{ color:#0042B2}
.linkforgot a:link{ color:#0042B2}
.linkforgot a:hover{ color:#0099FF}
a.button, .list a.button {
	text-decoration: none; height:23px;
	color: #FFFfff;
	display: inline-block; font-weight:bold; text-transform:uppercase;
	padding-left: 8px;
	margin-right: 5px;
	background: url(../images/bt_left.jpg) top left no-repeat;
}
a.button span {
	color: #FFF;
	text-decoration: none;font-weight:bold; text-transform:uppercase;
	display: block;
	padding: 5px 10px 5px 2px;
	background: url(../images/bt_right.jpg) top right no-repeat;
}